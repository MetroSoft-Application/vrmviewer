{
  "name": "vrm-viewer",
  "displayName": "VRM Viewer",
  "description": "Preview VRM files directly within the editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:vrmViewer.vrmPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "vrmViewer.vrmPreview",
        "displayName": "VRM Viewer",
        "selector": [
          {
            "filenamePattern": "*.vrm"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run compile:webview",
    "build": "npm run compile && npm run compile:webview",
    "compile": "tsc -p ./",
    "compile:webview": "webpack --config webpack.config.js",
    "watch": "tsc -watch -p ./",
    "watch:webview": "webpack --watch --config webpack.config.js",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/three": "^0.137.0",
    "@types/vscode": "^1.60.0",
    "@types/vscode-webview": "^1.57.0",
    "glob": "^7.1.7",
    "mocha": "^8.3.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.2.3",
    "vscode-test": "^1.5.2",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@pixiv/three-vrm": "^3.4.0",
    "three": "^0.137.5"
  }
}
